<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/log">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.laner.conectadeporte.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_curso"
            app:destination="@id/nav_curso" />
    </fragment>

    <fragment
        android:id="@+id/nav_curso"
        android:name="com.laner.conectadeporte.ui.home.HomeFragment"
        android:label="Curso"
        tools:layout="@layout/curso_frame" >
    </fragment>

    <!-- TODO Meter el frame de Apuntarse -->

    <fragment
        android:id="@+id/log"
        android:name="com.laner.conectadeporte.ui.register.LogInFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/log_in" >
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_login_to_registrarse"
            app:destination="@id/registrarse" />
    </fragment>

    <fragment
        android:id="@+id/registrarse"
        android:name="com.laner.conectadeporte.ui.home.HomeFragment"
        android:label="Curso"
        tools:layout="@layout/apuntarse_frame" >
    </fragment>

</navigation>
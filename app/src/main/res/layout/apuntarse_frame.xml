<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    android:padding="16dp"
    tools:context=".ui.curso.ApuntarseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="478dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apuntarse"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:background="@drawable/rectangle"
                android:hint="Nombre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/apellidos_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/rectangle"
                android:hint="Apellidos"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dni_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/rectangle"
                android:hint="DNI"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fnac_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/rectangle"
                android:hint="Fecha de nacimiento"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- TODO este ultimo hacerlo un deplegable con opciones -->
            <EditText
                android:id="@+id/horario_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/rectangle"
                android:hint="L/X        19h-20h        14-16 aÃ±os"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boton_cancelar"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rectangle_button_dark"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- TODO meter este color como color de boton aceptar cuando sara suba el commit -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boton_registrarse"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button_light"
                android:text="Apuntarse"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/condiciones_uso"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="left|bottom"
                android:text="Condiciones de uso"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contactanos"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginLeft="50dp"
                android:text="Contactanos"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- Codigo del Header de la Sidenav de la app -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/green_light"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imagen_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Imagen de Usuario"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/iconoperfil" />

    <!-- TODO funciona bien aunque ya haya otro atributo en Apuntarse con el mismo nombre? -->
    <TextView
        android:id="@+id/nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Usuario" />

    <TextView
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="nombre_usuario" />
</LinearLayout>
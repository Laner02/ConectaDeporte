<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/green_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="478dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/registrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Registrate"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usuario_nombre"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:text="Nombre"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usuario_apellido"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:text="Apellidos"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usuario_id"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:text="Nombre de usuario"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usuario_contrasena"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle"
                android:padding="10dp"
                android:text="ContraseÃ±a"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usuario_correo"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:text="Correo electronico"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usuario_telefono"
                style="@style/Rectangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:text="Numero de telefono"
                android:textColor="@color/gray_light"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_cancelar"
                style="@style/Button_Green_dark"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rectangle"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_registrarse"
                style="@style/Button_Green_light"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/rectangle"
                android:text="Registrarse"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/condiciones_uso"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="left|bottom"
                android:text="Condiciones de uso"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contactanos"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right |bottom"
                android:layout_marginLeft="50dp"
                android:text="Contactanos"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
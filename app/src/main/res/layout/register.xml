<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/green_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="478dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/registrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Registrarse"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/usuario_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:padding="15dp"
                android:hint="Nombre"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light" />

            <EditText
                android:id="@+id/usuario_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Apellidos"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light" />

            <EditText
                android:id="@+id/usuario_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Nombre de usuario"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light" />

            <EditText
                android:id="@+id/usuario_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="ContraseÃ±a"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light"/>

            <EditText
                android:id="@+id/usuario_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Correo electronico"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light"/>

            <EditText
                android:id="@+id/usuario_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:hint="Numero de telefono"
                android:textSize="18sp"
                android:background="@drawable/rectangle"
                android:hintColor="@color/gray_light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boton_cancelar"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:text="Cancelar"
                android:textSize="16sp"
                android:background="@drawable/rectangle_button_dark"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boton_registrarse"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="Registrarse"
                android:textSize="16sp"
                android:background="@drawable/rectangle_button_light"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/condiciones_uso"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="left|bottom"
                android:text="Condiciones de uso"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contactanos"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginLeft="50dp"
                android:text="Contactanos"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>